<?xml version="1.0" encoding="UTF-8"?>
<aiml>
   <category>
      <pattern> HOW ARE YOU FEELING TODAY </pattern>

      <template>
         <think><set name = "state"> happy</set></think>
         <condition name = "state" value = "happy">
            I am happy!
         </condition>

         <condition name = "state" value = "sad">
            I am sad!
         </condition>
      </template>

   </category>
</aiml>